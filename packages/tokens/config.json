{
  "source": [
    "properties/**/*.json"
  ],
  "platforms": {
    "less": {
      "transformGroup": "less",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "variables.less",
          "format": "less/variables"
        }
      ]
    },
    "es": {
      "transformGroup": "js",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "index.js",
          "format": "javascript/es6"
        }
      ]
    },
    "typings": {
      "transformGroup": "js",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "index.d.ts",
          "format": "typings/es6"
        }
      ]
    }
  }
}